    <delete id="deleteByIds">
        DELETE FROM board WHERE id IN
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="insertNews" parameterType="com.example.newslistservice.domain.News">
        update board
        set
            title = #{title},
            content = #{content},
            author_id = #{authorId},
            img = #{img}
        where id = #{id}
    </update>




</mapper>



